#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter the number of elements in the array: ";
    cin >> n;

    int arr[n];

    // Input array elements
    cout << "Enter the elements:" << endl;
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }

    // Output: Before Update
    cout << "Original array: ";
    for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;

    // Update: Change the value at a specific index
    int index, new_value;
    cout << "Enter the index you want to update: ";
    cin >> index;
    cout << "Enter the new value: ";
    cin >> new_value;
    
    arr[index] = new_value;  // Update the value at the specified index

    // Output: After Update
    cout << "Updated array: ";
    for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;

    return 0;
}
